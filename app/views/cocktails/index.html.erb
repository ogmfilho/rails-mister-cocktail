<div>
  <h1>Cocktails Index</h1>

  <% @cocktails.each do |cocktail| %>
    <p>
      <%= cocktail.name %>
      <%= link_to "Show", cocktail%>
      <%= link_to "Edit", edit_cocktail_path(cocktail) %>
      <%= link_to "Delete", cocktail, method: :delete, data: { confirm: "Are you sure?" }%>
    </p>

  <% end %>
  <p>
    <%= link_to "Create new cocktail", new_cocktail_path, class:"btn btn-primary"%>
  </p>

</div>

