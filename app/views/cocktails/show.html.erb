<p id="notice"><%= notice %></p>

<h1>Cocktail show</h1>
<div>
  <p>
    <strong>Name:</strong>
    <%= @cocktail.name %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </p>
</div>
<div>
  <h2>Ingredients</h2>
  <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to "Delete",
          dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" }
        %>
      </li>
    <% end %>
  </ul>

</div>


<%= link_to 'Back', cocktails_path%>
